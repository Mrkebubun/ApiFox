<!-- ko with: stats -->
    <div>
        <h2>
            Api requests stats
        </h2>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header">
                <h4>Today - @DateTime.Now.ToShortDateString()</h4>
            </div>
            <div class="responsive" tabindex="5004" style="overflow: hidden; outline: none;">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Api Name</th>
                            <th>Count</th>
                            <th>Last request</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: today">
                        <tr>
                            <td data-bind="text: $index()+1"></td>
                            <td data-bind="text: ApiName"></td>
                            <td data-bind="text: Count"></td>
                            <td data-bind="text: LatestRequest().format('HH:mm:ss')"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 "></div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header">
                <h4>Yesterday - @DateTime.Now.AddDays(-1).ToShortDateString()</h4>
            </div>
            <div class="responsive" tabindex="5004" style="overflow: hidden; outline: none;">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Api Name</th>
                            <th>Count</th>
                            <th>Last request</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: yesterday">
                        <tr>
                            <td data-bind="text: $index()+1"></td>
                            <td data-bind="text: ApiName"></td>
                            <td data-bind="text: Count"></td>
                            <td data-bind="text: LatestRequest().format('HH:mm:ss')"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 "></div>
    </div>
<!-- /ko -->
